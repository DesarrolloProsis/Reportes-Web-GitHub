@model DateTime?

@if (!Model.HasValue)
{
    <input type="date" id="@ViewData.TemplateInfo.GetFullHtmlFieldId("")" name="@ViewData.TemplateInfo.GetFullHtmlFieldName("")" class="form-control contorno" />
}
else
{
    <input type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" id="@ViewData.TemplateInfo.GetFullHtmlFieldId("")" name="@ViewData.TemplateInfo.GetFullHtmlFieldName("")" class="form-control contorno" />
}

